@model InAndOut.Models.Expense


<form method="post" asp-action="UpdatePost">
    <input asp-for="Id" hidden />
    <div asp-validation-summary="ModelOnly"></div>
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Update Expense</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6 text-center">
                        <label asp-for="ExpenseName"></label> 
                    </div>
                    <div class="col-6 text-center">
                        <label asp-for="Amount"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="ExpenseName"  class="form-control" />
                        <span asp-validation-for="ExpenseName"></span>
                    </div>
                    <div class="col-6">
                        <input asp-for="Amount"  class="form-control" />
                        <span asp-validation-for="Amount"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 text-center row offset-2">
                       <div class="col">
                            <input type="submit" class="btn btn-primary w-75" value="Update" />
                        </div>
                        <div class="col">
                           <a class="btn btn-danger w-75" asp-action="Index">Back</a>
                        </div>
                    </div>     
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts{
    @{ <partial name="_ValidationScriptsPartial" />}
}
