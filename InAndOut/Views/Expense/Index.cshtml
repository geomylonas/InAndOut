
@model IEnumerable<InAndOut.Models.Expense>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expenses List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-controller="Expense" asp-action="Create">Create new Item</a>
        </div>
    </div>
    <br/>

    @if (Model.Count() > 0)
    {   
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Expense Name
                    </th>
                    <th>
                        Amount
                    </th>
                </tr>
                <tbody>
                    @foreach(var expense in Model)
                    {
                        <tr>
                            <td width="30%">@expense.ExpenseName</td>
                            <td width="30%">@expense.Amount</td>                
                        </tr>
                    }
                </tbody>
            </thead>
        </table>
    }
    else
    {
        <p>No Items Created Yet</p>
    }

</div>



